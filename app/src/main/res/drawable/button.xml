<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip"/>
            <stroke android:color="#01ACE0" android:width="3dip"/>
            <gradient android:endColor="#01ACE0" android:startColor="#01ACE0" android:angle="180"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip"/>
            <stroke android:color="#01ACE0" android:width="3dip"/>
            <gradient android:endColor="#01ACE0" android:startColor="#01ACE0" android:angle="180"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dip"/>
            <gradient android:endColor="#01ACE0" android:startColor="#01ACE0" android:angle="0"/>
        </shape>
    </item>
</selector>